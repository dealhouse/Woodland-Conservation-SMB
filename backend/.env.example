# Database
DB_NAME=app
DB_USER=app
DB_PASSWORD=app
DB_HOST=db
DB_PORT=5432

# Optional: GIS libraries (only needed if Django can't auto-find them)
# On macOS (Homebrew, Apple Silicon):
# GDAL_LIBRARY_PATH=/opt/homebrew/opt/gdal/lib/libgdal.dylib
# GEOS_LIBRARY_PATH=/opt/homebrew/opt/geos/lib/libgeos_c.dylib

# On Linux these are often not needed if installed via apt/yum and on the default linker path.

# Django
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=change-me-in-dev

# How to use
# cd backend
# cp .env.example .env   # then edit if you want
